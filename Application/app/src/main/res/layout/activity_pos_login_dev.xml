<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dev.posLoginDev">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/preto_1"
        android:padding="40dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="200dp"
                android:minHeight="75dp"
                android:src="@mipmap/logofrase"
                android:layout_marginBottom="40dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escolha uma opção:"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/botao_cadastro_empresa"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Encontre o job ideal"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="18sp"
                    android:backgroundTint="@color/preto_1"
                    android:paddingHorizontal="25dp"
                    android:paddingVertical="30dp"
                    android:onClick="Encontre"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/botao_cadastro_desenvolvedor"
                android:gravity="center"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Perfil e estatísticas"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="18sp"
                    android:backgroundTint="@color/preto_1"
                    android:paddingHorizontal="25dp"
                    android:paddingVertical="30dp"
                    android:onClick="perfil"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>