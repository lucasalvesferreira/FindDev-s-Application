<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".PerfilCompleto">

    <fragment
        android:id="@+id/header_seta_voltar"
        android:name="com.example.finddev.HeaderSetaVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_header_seta_voltar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="40dp">

            <ImageView
                android:id="@+id/imgPerfilCompleto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/logo"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <RatingBar
                android:id="@+id/ratingBarCompleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:isIndicator="true"/>

            <TextView
                android:id="@+id/tvNomeCompleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Completo"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tvCompetenciasCompleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Competências"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tvBiografiaLabelCompleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biografia"
                android:textSize="16sp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/tvBiografiaCompleto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/tvExperienciaLabelCompleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experiência"
                android:textSize="16sp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/tvExperienciaCompleto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

            <Button
                android:id="@+id/btnAvaliar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avalie seus contratantes"
                android:textSize="16sp"
                android:padding="10dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
