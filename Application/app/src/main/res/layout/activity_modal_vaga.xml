<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModalVaga"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/modal_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtModalTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título da Vaga"
                android:textColor="#fff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtModalSubtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Subtítulo da Vaga"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtModalValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Valor da Vaga"
                android:textColor="#fff"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/txtModalFrenteDesenvolvimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/background_frente"
                android:padding="2dp"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtModalSenioridade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_senioridade"
                android:padding="2dp"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtModalDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnCandidatar"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_modal_candidatar"
                    android:padding="10dp"
                    android:text="@string/text_candidatar"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
