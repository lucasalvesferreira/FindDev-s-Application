<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    tools:context=".ModalVaga">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/modal_background"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txtModalTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título da Vaga"
                android:textSize="25sp"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/txtModalSubtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subtítulo da Vaga"
                android:textSize="15sp"
                android:textColor="#fff"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txtModalValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor da Vaga"
                android:textSize="15sp"
                android:textColor="#fff"
                android:layout_marginTop="8dp"/>


                <TextView
                    android:id="@+id/txtModalFrenteDesenvolvimento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/background_frente"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:padding="2dp"
                    />

                <TextView
                    android:id="@+id/txtModalSenioridade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_senioridade"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:layout_marginTop="8dp"
                    android:padding="2dp"
                    />

            <TextView
                android:id="@+id/txtModalDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingBottom="16dp"/>

            <Button
                android:id="@+id/btnCandidatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Candidatar-se"
                android:textColor="@color/white"
                android:background="@drawable/btn_modal_candidatar"
                android:padding="12dp"
                android:gravity="center"/>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
