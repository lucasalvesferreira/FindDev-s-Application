<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroDev">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/preto_1"
        android:padding="40dp"
    >

        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="com.example.finddev.HeaderLogin"
            tools:layout="@layout/fragment_header_login"
            android:layout_marginBottom="100dp"
            android:id="@+id/fragment_header_cadastro_dev"
        />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_cadastro"
                    android:textSize="40sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="50dp"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                >
                    <androidx.constraintlayout.utils.widget.MotionLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_email"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_light"
                        android:textColor="@color/white"
                    />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:hint="exemplo@email.com"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/borda_input_cadastro"
                        style="@style/input_cadastro"
                        android:id="@+id/et_email"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <androidx.constraintlayout.utils.widget.MotionLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_senha"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_light"
                        android:textColor="@color/white"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:hint="***********"
                        android:inputType="textPassword"
                        android:background="@drawable/borda_input_cadastro"
                        style="@style/input_cadastro"
                        android:id="@+id/et_senha"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <androidx.constraintlayout.utils.widget.MotionLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_conf_senha"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_light"
                        android:textColor="@color/white"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:hint="***********"
                        android:inputType="textPassword"
                        android:background="@drawable/borda_input_cadastro"
                        style="@style/input_cadastro"
                        android:id="@+id/et_confirmacao"

                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <androidx.constraintlayout.utils.widget.MotionLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_nome"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_light"
                        android:textColor="@color/white"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:hint=""
                        android:inputType="text"
                        android:background="@drawable/borda_input_cadastro"
                        style="@style/input_cadastro"
                        android:id="@+id/et_nome"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <androidx.constraintlayout.utils.widget.MotionLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_cpf"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_light"
                        android:textColor="@color/white"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:inputType="text"
                        android:background="@drawable/borda_input_cadastro"
                        style="@style/input_cadastro"
                        android:id="@+id/et_cpf"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <androidx.constraintlayout.utils.widget.MotionLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_telefone"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_light"
                        android:textColor="@color/white"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:hint=""
                        android:inputType="phone"
                        android:background="@drawable/borda_input_cadastro"
                        style="@style/input_cadastro"
                        android:id="@+id/et_telefone"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <androidx.constraintlayout.utils.widget.MotionLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_estado"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_light"
                        android:textColor="@color/white"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:inputType="text"
                        android:background="@drawable/borda_input_cadastro"
                        style="@style/input_cadastro"
                        android:id="@+id/et_estado"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <androidx.constraintlayout.utils.widget.MotionLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_cidade"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_light"
                        android:textColor="@color/white"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:inputType="text"
                        android:background="@drawable/borda_input_cadastro"
                        style="@style/input_cadastro"
                        android:id="@+id/et_cidade"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botao_login"
                    android:gravity="center"
                >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/text_cadastrar"
                        android:fontFamily="@font/montserrat"
                        android:backgroundTint="@color/preto_1"
                        android:onClick="cadastrarDev"
                    />
<!--                    <TextView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text=""-->
<!--                        android:id="@+id/id_response"></TextView>-->

                </LinearLayout>



            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>