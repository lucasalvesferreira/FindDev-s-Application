<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="input_cadastro">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#8D8D99</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>
    <style name="SpinnerDev" parent="android:Widget.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>
    <style name="SpinnerSelectedItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@color/preto_1</item> <!-- Cor de fundo preto -->
    </style>
    <style name="card_vagas">
        <item name="android:background">@drawable/card_border</item> <!-- Cor de fundo preto -->
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:outlineProvider">bounds</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="ClickableImageStyle">
        <item name="android:clickable">true</item> <!-- Permite que a imagem seja clicÃ¡vel -->
        <item name="android:foreground">?attr/selectableItemBackground</item> <!-- Adiciona um efeito de clique -->
    </style>
        <style name="RatingBarStyle" parent="@android:style/Widget.RatingBar">
            <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
            <item name="android:minHeight">48dp</item>
            <item name="android:maxHeight">48dp</item>
        </style>

    <style name="ModalVagaStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/ModalVagaAnimation</item>
    </style>

    <style name="ModalVagaAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

</resources>




